<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notebook_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="textFillColor">@android:color/transparent</item>

<!--        I have my custom actionbars maaaan!!!-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!--        Top and bottom of app-->
        <item name="android:navigationBarColor">@color/blurple_white</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_darker</item>
        <item name="colorOnSecondary">@color/blurple_darker_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- manrope <3 -->
        <item name="android:fontFamily">@font/manrope</item>
        <item name="fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/blurple_dark_grey</item>
    </style>

    <style name="Theme.Notebook_project.TextInversedColors" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">
            @color/blurple_white
        </item>
    </style>


    <style name="Theme.Notebook_project.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notebook_project.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notebook_project.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Notebook_project.AppBackground" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:background">
            @color/blurple_white
        </item>
    </style>

    <style name="Theme.Notebook_project.RecyclerViewItem" parent="ThemeOverlay.AppCompat.DayNight">
<!--        <item name="backgroundColor">-->
<!--            @color/blurple_white-->
<!--        </item>-->
        <item name="android:textColor">
            @color/blurple_dark_grey
        </item>
        <item name="android:background">
            @drawable/material_text_view
        </item>
<!--        <item name="android:backgroundTint">-->
<!--            @color/blurple_white_desat-->
<!--        </item>-->
    </style>

    <style name="Theme.Notebook_project.RecyclerViewOptionsButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">
            @color/blurple_dark_grey
        </item>
        <item name="android:backgroundTint">
            @color/blurple_white_desat
        </item>
    </style>


    <style name="Theme.Notebook_project.ImageButtonAdaptiveStyle" parent="Widget.AppCompat.ImageButton">
        <item name="tint">
            @color/blurple_dark_grey
        </item>
        <item name="android:backgroundTint">
            @color/sky_blue
        </item>

    </style>

    <style name="Theme.Notebook_project.ImageButtonAdaptiveStyleTransparent" parent="Widget.AppCompat.ImageButton">
        <item name="tint">
            @color/blurple_dark_grey
        </item>
        <item name="android:backgroundTint">
            @android:color/transparent
        </item>
    </style>

    <style name="Theme.Notebook_project.FabAdaptive" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="android:tint">
            @color/blurple_white
        </item>
        <item name="android:backgroundTint">
            @color/sky_blue
        </item>
    </style>

    <style name="Theme.Notebook_project.ToggleButtonAdaptiveStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">
            @color/blurple_dark_grey
        </item>
        <item name="backgroundTint">
            @color/blurple_dark_grey
        </item>
    </style>

    <style name="Theme.Notebook_project.RWDivider" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:backgroundTint">
            @color/blue_dark
        </item>
    </style>
    <style name="Theme.Notebook_project.OtherStuff" parent="Theme.Material3.Light">
        <item name="colorPrimaryVariant">
            @color/sky_blue
        </item>
        <item name="android:navigationBarColor">
            @color/blurple_white
        </item>
    </style>

    <style name="Theme.Notebook_project.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">
            @drawable/material_text_view
        </item>
        <item name="android:padding">
            12dp
        </item>
    </style>

    <style name="Theme.Notebook_project.PreviewTextViewStyle" parent="ThemeOverlay.AppCompat">
        <item name="textFillColor">@android:color/transparent</item>
        <item name="android:textColor">@color/blurple_dark_grey</item>
        <item name="android:fontFamily">@font/cmu_serif</item>
        <item name="fontFamily">@font/cmu_serif</item>
    </style>
</resources>